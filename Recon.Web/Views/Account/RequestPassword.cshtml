@model Recon.Web.Models.EmailModel

@{
    ViewBag.Title = "Request Password";
}

@using (Html.BeginForm("RequestPassword", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <legend>Enter your email to re-initialize your password, then follow the link you will received at this address.</legend>
    <dl class="dl-horizontal">
        <dd>&nbsp;</dd>
        <dt>@Html.LabelFor(m => m.Email)</dt>
        <dd>
            @Html.TextBoxFor(m => m.Email)
            @Html.ValidationMessageFor(m => m.Email, String.Empty, new { @class = "label label-important" })
        </dd>
        <dd>
           <input type="submit" value="Send Request" class="btn btn-primary"/>   
        </dd>
    </dl>
}
